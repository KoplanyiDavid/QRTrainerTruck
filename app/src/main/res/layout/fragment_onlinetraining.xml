<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainactivity.OnlineTrainingFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivMorning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/reggeli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivNight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/esti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMorning" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivBodyweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/reggeli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivNight" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivTools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/reggeli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBodyweight" />


</androidx.constraintlayout.widget.ConstraintLayout>